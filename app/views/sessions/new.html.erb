<div class="row">
  <div class="col-lg-4 col-lg-offset-4">
    <h2>LOGIN</h2>
    <%= form_for(:session, url: login_path) do |f| %>
      <fieldset>
        <div class="input-group col-lg-12">
          <%= f.label :username %>
          <%= f.text_field :username, class: "form-control" %>
        </div>
        <div class="input-group col-lg-12">
          <%= f.label :password %>
          <%= f.password_field :password, class: "form-control" %>
        </div>
        <div class="form-actions">
          <%= f.submit "Log In", class: "btn btn-default" %>
        </div>
      </fieldset>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-lg-4 col-lg-offset-4">
    <h2>SIGN UP</h2>
    <%= form_for(:user, url: users_path) do |f| %>
      <fieldset>
        <div class="input-group col-lg-12">
          <%= f.label :username %>
          <%= f.text_field :username, class: "form-control", required: true %>
        </div>
        <div class="input-group col-lg-12">
          <%= f.label :email %>
          <%= f.email_field :email, class: "form-control", required: true %>
        </div>
        <div class="input-group col-lg-12">
          <%= f.label :password %>
          <%= f.password_field :password, class: "form-control", required: true %>
        </div>
        <div class="input-group col-lg-12">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, class: "form-control", required: true %>
        </div>
        <div class="input-group col-lg-12">
          <%= f.label :phone_number %>
          <%= f.telephone_field :phone_number, class: "form-control", id: "authy-cellphone", required: true %>
        </div>
        <div class="form-group">
          <%= f.label :country_code %>
          <%= f.text_field :country_code, class: "form-control", id: "authy-countries" %>
        </div>

        <div class="form-group">
          <div class="radio">
            <label>
              <input type="radio" name="en" required>
              English
            </label>
            <label>
              <input type="radio" name="es" required>
              Espa√±ol
            </label>
          </div>
        </div>
      </fieldset>
      <div class="form-actions">
        <%= f.submit "Sign Up", class: "btn btn-default" %>
      </div>
    <% end %>
  </div>
</div>
