<h2>Sign up</h2>
<%= form_for(:user, url: users_path) do |f| %>
  <fieldset>
    <div class="input-group col-md-12">
      <%= f.label :username %>
      <%= f.text_field :username, class: "form-control", required: true %>
    </div>
    <div class="input-group col-md-12">
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control", required: true %>
    </div>
    <div class="input-group col-md-12">
      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control", required: true %>
    </div>
    <div class="input-group col-md-12">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, class: "form-control", required: true %>
    </div>
    <div class="input-group col-md-12">
      <%= f.label :phone_number %>
      <%= f.telephone_field :phone_number, class: "form-control", id: "authy-cellphone", required: true %>
    </div>
    <div class="form-group">
      <%= f.label :country_code %>
      <%= f.text_field :country_code, class: "form-control", id: "authy-countries" %>
    </div>
  </fieldset>
  <div class="form-actions">
    <%= f.submit "Sign Up", class: "btn btn-default" %>
  </div>
<% end %>
