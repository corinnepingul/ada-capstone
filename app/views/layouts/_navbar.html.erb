<% if session[:id] && @user %>
  <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container-fluid">
      <div class="navbar-header">
        <%= link_to "Stash This Moment", root_path, class: "navbar-brand title-font" %>

        <div class="navbar-collapse collapse">
          <%= form_tag(search_path, method: "post", class: "navbar-form center-search") do %>
            <div class="form-group">
              <%= label_tag(:search_term, "Search for:", class: "hidden") %>
              <%= text_field_tag(:search_term, nil, class: "form-control", placeholder: "Search") %>
            </div>
          <% end %>
        </div>

        <button type="button" class="navbar-toggle navbar-btn" data-toggle="collapse" data-target="#navbar" aria-expanded="true" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>

      <div id="navbar" class="navbar-collapse collapse" aria-expanded="true">
        <ul class="nav navbar-nav navbar-right">
          <li><p class="navbar-text stm_phone_number">(504) 315-7972</p></li>
          <li><p class="navbar-text"><%= @user.username %></p></li>
          <li><p class="navbar-text"><%= link_to "Logout", logout_path, method: :delete %></p></li>
        </ul>
      </div>
    </div>
  </nav>
<% end %>
